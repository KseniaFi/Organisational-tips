<body>
    <div class="container" id="content">
        <div class="header">
            <h1></h1>
        </div>
        
        <div class="question-section">
            <img src="img/IMG_20250913_153226_505.jpg" class="question-image">
            
            <div class="question">Choose the best answer to the question belowüëá<br>
                What is the main topic of the article?</div>
            
            <div class="options">
                <div class="option" data-value="a">a) How to wash dishes quickly</div>
                <div class="option" data-value="b">b) Tips for keeping your home better organized</div>
                <div class="option" data-value="c">c) How to recycle old items</div>
                <div class="option" data-value="d">d) Ways to decorate your living room</div>
            </div>
            
            <div class="result" id="result">
                <div class="correct-answer">–ü—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç: b) Tips for keeping your home better organized</div>
            </div>
        </div>
        
        <button class="download-btn" onclick="generatePDF()">Download as PDF</button>
    </div>

    <script>
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã–±–æ—Ä–∞ –æ—Ç–≤–µ—Ç–∞
        const options = document.querySelectorAll('.option');
        const result = document.getElementById('result');
        
        options.forEach(option => {
            option.addEventListener('click', () => {
                // –°–±—Ä–∞—Å—ã–≤–∞–µ–º –ø—Ä–µ–¥—ã–¥—É—â–∏–µ –≤—ã–±–æ—Ä—ã
                options.forEach(opt => {
                    opt.classList.remove('selected', 'correct', 'incorrect');
                });
                
                // –û—Ç–º–µ—á–∞–µ–º –≤—ã–±—Ä–∞–Ω–Ω—ã–π –≤–∞—Ä–∏–∞–Ω—Ç
                option.classList.add('selected');
                
                // –ü—Ä–æ–≤–µ—Ä—è–µ–º –ø—Ä–∞–≤–∏–ª—å–Ω–æ—Å—Ç—å –æ—Ç–≤–µ—Ç–∞
                if (option.dataset.value === 'b') {
                    option.classList.add('correct');
                } else {
                    option.classList.add('incorrect');
                    
                    // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –æ—Ç–≤–µ—Ç
                    options.forEach(opt => {
                        if (opt.dataset.value === 'b') {
                            opt.classList.add('correct');
                        }
                    });
                }
                
                // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Ä–µ–∑—É–ª—å—Ç–∞—Ç
                result.classList.add('show');
            });
        });
        
        // –ì–µ–Ω–µ—Ä–∞—Ü–∏—è PDF
        function generatePDF() {
            // –ò—Å–ø–æ–ª—å–∑—É–µ–º html2canvas –¥–ª—è –∑–∞—Ö–≤–∞—Ç–∞ —Å–æ–¥–µ—Ä–∂–∏–º–æ–≥–æ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞
            html2canvas(document.getElementById('content'), {
                scale: 2,
                useCORS: true,
                backgroundColor: null
            }).then(canvas => {
                // –°–æ–∑–¥–∞–µ–º –Ω–æ–≤—ã–π –æ–±—ä–µ–∫—Ç jsPDF
                const pdf = new window.jspdf.jsPDF({
                    orientation: 'portrait',
                    unit: 'px',
                    format: [canvas.width, canvas.height]
                });

                // –ö–æ–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º canvas –≤ data URL
                const imgData = canvas.toDataURL('image/png', 1.0);

                // –î–æ–±–∞–≤–ª—è–µ–º –∏–∑–æ–±—Ä–∞–∂–µ–Ω–∏–µ –≤ PDF
                pdf.addImage(imgData, 'PNG', 0, 0, canvas.width, canvas.height);

                // –°–æ—Ö—Ä–∞–Ω—è–µ–º PDF
                pdf.save('Skimming_Exercise.pdf');
            });
        }
    </script>
